- name: Print Report URL
  run: |
    echo "### 🌐 Report Deployed" >> $GITHUB_STEP_SUMMARY
    echo "📅 Date: ${{ env.date }}" >> $GITHUB_STEP_SUMMARY
    echo "🌍 Env: ${{ matrix.ENV_NAME }}" >> $GITHUB_STEP_SUMMARY
    echo "🔗 [Click to View Report](https://orx-cat-ar.s3docs.optum.com/cypress/reports/${{ env.date }}/index.html)" >> $GITHUB_STEP_SUMMARY
